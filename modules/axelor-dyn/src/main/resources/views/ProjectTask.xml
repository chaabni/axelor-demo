<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.1.xsd">

  <grid id="project-task-grid.dyn" name="project-task-grid" title="Project Tasks" model="com.axelor.project.db.ProjectTask" groupBy="project">
    <field name="name" />
    <field name="createDate" />
    <field name="startDate" />
    <field name="endDate" />
    <field name="user" />
    <field name="project" />
    <field name="priority" />
    <field name="progress" widget="Progress" aggregate="sum" />
  </grid>
  
  <form id="project-form.dyn" name="project-form" title="Project" model="com.axelor.project.db.Project">
    <panel title="Overview">
      <field name="name"/>
      <field name="priority"/>
      <field name="description"/>
      <field name="parent"/>
      <field name="members" widget="TagSelect" x-create="code,name,password"/>
    </panel>
    <panel-dashlet action="project.tasks.tree"/>
    <panel-tabs>
      <panel-related field="tasks" editable="true">
        <field name="name" />
        <field name="createDate" />
        <field name="startDate" />
        <field name="endDate" />
        <field name="user" />
        <field name="priority" />
      </panel-related>
      <panel title="Notes">
        <field name="notes" showTitle="false" colSpan="12"/>
      </panel>
    </panel-tabs>
  </form>

</object-views>
