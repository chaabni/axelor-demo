<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_3.0.xsd">

  <grid name="circle-grid" title="Circles" model="com.axelor.contact.db.Circle">
    <field name="name" />
    <field name="code" />
  </grid>

  <form name="circle-form" title="Circle" model="com.axelor.contact.db.Circle" width="mini">
    <panel title="Overview" itemSpan="12">
      <field name="code" />
      <field name="name" />
    </panel>
  </form>

</object-views>
