<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
  
  <grid name="project-task-grid" title="Project Tasks">
    <field name="name" />
    <field name="createDate" />
    <field name="startDate" />
    <field name="endDate" />
    <field name="user" />
    <field name="project" />
    <field name="priority" />
  </grid>
  
  <form name="project-task-form" title="Project Task">
    <field name="name" />
    <field name="priority" />
    <field name="createDate"/>
    <field name="deadlineDate"/>
    <field name="startDate"/>
    <field name="endDate" />
    <field name="user"/>
    <field name="project"/>
    <notebook colSpan="4">
      <page title="Work Items" cols="1">
        <field name="workItems" noLabel="true">
          <grid title="Work Item" editable="true">
            <field name="name" />
            <field name="date" />
            <field name="hours" />
          </grid>
          <form title="Work Item">
            <field name="name" />
            <break/>
            <field name="date" />
            <field name="hours" />
          </form>
        </field>
      </page>
      <page title="Notes" cols="1">
        <field name="notes" noLabel="true"/>
      </page>
    </notebook>
  </form>
  
  <calendar name="project-task-calendar" title="Project Tasks" colorBy="user"
    eventStart="startDate"
    eventStop="endDate"
    eventLength="1">
    <field name="name" />
  </calendar>

  <calendar name="project-task-calendar-my" title="My Tasks" colorBy="project"
    eventStart="startDate"
    eventStop="endDate"
    eventLength="1">
    <field name="name" />
  </calendar>

</object-views>
